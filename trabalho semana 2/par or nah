#include <stdio.h>
#include <stdlib.h>

int main()
{
    int numerodiv, parornah;
    printf("qual o numero para indentificar se é par ou impar: ");
    scanf ("%d", &numerodiv);
    //processamento
    parornah=numerodiv%2;

    //funcao
    if (parornah==0){
    printf("O numero %d é par!!", numerodiv);
    }
    else{
     printf("O numero %d é impar!!", numerodiv);
    }
    return 0;
}
