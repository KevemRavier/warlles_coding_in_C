#include <stdio.h>

int main() {
   short idd;
   int dpos;
   long cont;

   printf("Digite sua idade: ");
   scanf("%hd", &idd);

   printf("Digite o valor a depositar: ");
   scanf("%d", &dpos);

   printf("Digite o numero da conta: ");
   scanf("%ld", &cont);

   printf("\nidade: %hd\ndeposito: %d\nconta: %ld\n", idd, dpos, cont);

   return 0;
}
