#include <stdio.h>

int main() {
   short idd;
   int dpos;
   char cont[20];

   // entrada de dados
   printf("Digite sua idade: ");
   scanf("%hd", &idd);

   printf("Digite o valor a depositar: ");
   scanf("%d", &dpos);

   printf("Digite o numero da conta: ");
   scanf("%s", cont);

   // sa√≠da de dados
   printf("\nidade: %hd\ndeposito: %d\nconta: %s\n", idd, dpos, cont);

   return 0;
}
