#include <stdio.h>
#include <stdlib.h>

int main()
{
    //declaracao de variaveis
    int a, b, soma, multi, sub, quo, rest;
    //entrada de dados
    printf("informe o primeiro valor a ser calculado: ");
    scanf ("%d", &a);
    printf("informe o segundo valor a ser calculado: ");
    scanf ("%d", &b);
    //processamento
    soma=a+b;
    sub=a-b;
    multi=a*b;
    quo=a/b;
    rest=a%b;
    //saida de dados
    printf("A soma de %d + %d é: %d\n",a,b,soma);
    printf("A subtracao de %d - %d é: %d\n",a,b,sub);
    printf("A multiplicação de %d × %d é: %d\n",a,b,multi);
    printf("o quociente de %d ÷ %d é: %d\n",a,b,quo);
    printf("o resto da divisão de %d %% %d é: %d\n",a,b,rest);
    return 0;
}
